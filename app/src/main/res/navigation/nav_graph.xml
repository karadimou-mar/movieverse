<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.movieverse.HomeScreen"
        android:label="home_screen"
        tools:layout="@layout/home_screen" >
        <action
            android:id="@+id/action_home_to_favorites"
            app:destination="@id/favorites" />
    </fragment>


    <fragment
        android:id="@+id/favorites"
        android:name="com.example.movieverse.FavoritesScreen"
        android:label="favorites_screen"
        tools:layout="@layout/favorites_screen" >
        <action
            android:id="@+id/action_favorites_to_theatres"
            app:destination="@id/theatres" />
    </fragment>

    <fragment
        android:id="@+id/theatres"
        android:name="com.example.movieverse.TheatresScreen"
        android:label="theatres_screen"
        tools:layout="@layout/theatres_screen" >
        <action
            android:id="@+id/action_theatres_to_account"
            app:destination="@id/favorites" />
    </fragment>

    <fragment
        android:id="@+id/account"
        android:name="com.example.movieverse.AccountScreen"
        android:label="account_screen"
        tools:layout="@layout/account_screen" />

</navigation>